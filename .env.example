NODE_ENV=production
PORT=3000

# Required
JWT_SECRET=replace_with_a_long_random_secret

# Database (use ONE: MongoDB preferred, Postgres optional fallback)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/memory_vault?retryWrites=true&w=majority
DATABASE_URL=

# Optional AI
OPENAI_API_KEY=replace_with_openai_key
OPENAI_MODEL=gpt-4.1-mini

# Optional admin protection
ADMIN_API_KEY=replace_with_admin_api_key
ADMIN_OWNER_EMAIL=you@example.com

# Optional CORS allowlist (comma-separated). For same-origin Vercel, can be empty.
CORS_ORIGINS=
